<Window x:Class="Tema3_Mosaico.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tema3_Mosaico"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <TextBlock Height="100" Background="BlueViolet" DockPanel.Dock="Top"/>
        <TextBlock Width="100" Background="BlueViolet" DockPanel.Dock="Left"/>
        <TextBlock Height="100" Background="ForestGreen" DockPanel.Dock="Bottom"/>
        <TextBlock Width="100" Background="ForestGreen" DockPanel.Dock="Right"/>
        <TextBlock Height="100" Background="OrangeRed" DockPanel.Dock="Bottom"/>
        <TextBlock Width="100" Background="OrangeRed" DockPanel.Dock="Left"/>
        <TextBlock Height="100" Background="DeepPink" DockPanel.Dock="Top"/>
        <TextBlock Width="100" Background="DeepPink" DockPanel.Dock="Right"/>
        <TextBlock Background="Black" DockPanel.Dock="Top"/>
    </DockPanel>
</Window>
